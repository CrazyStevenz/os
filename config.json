{
  "icedos": {
    "applications": {
      "android-tools": true,
      "brave": true,
      "codium": {
        "enable": true,
        "extensions": [
          "codezombiech.gitignore",
          "dbaeumer.vscode-eslint",
          "donjayamanne.githistory",
          "eamodio.gitlens",
          "editorconfig.editorconfig",
          "esbenp.prettier-vscode",
          "formulahendry.auto-close-tag",
          "formulahendry.code-runner",
          "gruntfuggly.todo-tree",
          "jnoortheen.nix-ide",
          "markwylde.vscode-filesize",
          "mblode.twig-language-2",
          "ms-vscode.references-view",
          "nico-castell.linux-desktop-file",
          "paragdiwan.gitpatch",
          "pkief.material-icon-theme",
          "timonwong.shellcheck",
          "zhuangtongfa.material-theme",
          "ziyasal.vscode-open-in-github"
        ],
        "zoomLevel": 0
      },
      "kitty": {
        "hideDecorations": true
      },
      "librewolf": {
        "enable": true,
        "overrides": true,
        "privacy": true,
        "pwas": [
          "https://app.tuta.com",
          "https://develop.element.io",
          "https://discord.com/app",
          "https://dtekteam.slack.com/",
          "https://web.skype.com/"
        ]
      },
      "nvchad": true,
      "steam": {
        "beta": true,
        "downloadsWorkaround": true,
        "session": {
          "enable": false,
          "autoStart": {
            "enable": false,
            "desktopSession": "hyprland"
          }
        }
      },
      "sunshine": true,
      "emulators": {
        "switch": false,
        "wiiu": false
      }
    },
    "bootloader": {
      "animation": false,
      "grub": {
        "enable": false,
        "device": "/dev/sda"
      },
      "systemd-boot": {
        "enable": true,
        "mountPoint": "/boot"
      }
    },
    "desktop": {
      "autologin": {
        "enable": true,
        "user": "icedborn"
      },
      "gdm": {
        "enable": true,
        "autoSuspend": true
      },
      "gnome": {
        "enable": false,
        "extensions": {
          "arcmenu": false,
          "dashToPanel": false,
          "gsconnect": true
        },
        "clock": {
          "date": false,
          "weekday": false
        },
        "hotCorners": false,
        "powerButtonAction": "interactive",
        "startupItems": false,
        "titlebarLayout": "appmenu:close",
        "workspaces": {
          "dynamicWorkspaces": true,
          "maxWorkspaces": 1
        }
      },
      "hyprland": {
        "enable": true,
        "backlight": "amdgpu_bl0",
        "lock": {
          "secondsToLowerBrightness": 60,
          "cpuUsageThreshold": 60,
          "diskUsageThreshold": 10,
          "networkUsageThreshold": 1000000
        }
      }
    },
    "hardware": {
      "btrfs": {
        "compression": {
          "enable": true,
          "mounts": true,
          "root": true
        }
      },
      "cpus": {
        "amd": {
          "enable": true,
          "undervolt": {
            "enable": true,
            "value": "-p 0 -v 3C -f A0"
          }
        },
        "intel": false
      },
      "devices": {
        "laptop": false,
        "steamdeck": false
      },
      "gpus": {
        "amd": true,
        "nvidia": {
          "enable": false,
          "beta": false,
          "powerLimit": {
            "enable": true,
            "value": 242
          }
        }
      },
      "monitors": {
        "main": {
          "enable": true,
          "deck": false,
          "name": "DP-1",
          "resolution": "1920x1080",
          "refreshRate": 144,
          "position": "1360x0",
          "scaling": 1,
          "rotation": 0
        },
        "second": {
          "enable": true,
          "deck": false,
          "name": "HDMI-A-1",
          "resolution": "1360x768",
          "refreshRate": 60,
          "position": "0x0",
          "scaling": 1,
          "rotation": 0
        },
        "third": {
          "enable": true,
          "deck": false,
          "name": "DP-2",
          "resolution": "1280x1024",
          "refreshRate": 75,
          "position": "3280x0",
          "scaling": 1,
          "rotation": 0
        }
      },
      "networking": {
        "hostname": "desktop",
        "hosts": false,
        "ipv6": false
      },
      "mounts": true,
      "virtualisation": {
        "docker": true,
        "libvirtd": true,
        "lxd": true,
        "spiceUSBRedirection": true,
        "waydroid": true
      }
    }
  }
}
